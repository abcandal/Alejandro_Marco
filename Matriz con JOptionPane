import javax.swing.JOptionPane;

public class nuevamatriz {
    public static void main(String[] args) {
        int matriz[][], nfilas, ncolumnas;

        nfilas = Integer.parseInt(JOptionPane.showInputDialog(null, "Escriba el número de filas"));
        ncolumnas = Integer.parseInt(JOptionPane.showInputDialog(null, "Escriba el número de columnas"));

        matriz = new int[nfilas][ncolumnas];

        for (int i = 0; i < nfilas; i++) {
            for (int j = 0; j < ncolumnas; j++) {
                matriz[i][j] = Integer.parseInt(JOptionPane.showInputDialog(null,
                        "Escriba el elemento de la posición [" + i + "][" + j + "]"));
            }
        }

        System.out.println("\nLa matriz es: ");
        for (int i = 0; i < nfilas; i++) {
            for (int j = 0; j < ncolumnas; j++) {
                System.out.print(matriz[i][j] + " ");
            }
            System.out.println();
        }
    }
}
